#include <iostream>
using namespace std;

int main() {
  
 int num[9] = {1, 2, 3, 4, 5, 6, 7, 8, 9};
  
 cout << " Array: " << endl;
  
  for (int i = 0; i < 9; i++) {
  for(int n = 0; n < i - 9; n++){
    cout  << ", " << endl;
  }
     cout << num[i]  << "\0";
  }
  cout << "Largest element in the array: " << num[8] << endl;
  cout << "Smallest element in the array: " << num[0] << endl;
}
